{
  "name": "Time Manager",
  "version": "1.0.0",
  "description": "A website screen-time management device to help you regain control of your time.",
  "manifest_version": 3,
  "author": "Mootbing",

  "action":{
    "default_popup": "index.html",
    "default_title": "Time Manager",
    "default_icon": {
      "16": "images/16.png",
      "24": "images/24.png",
      "32": "images/32.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["scripts/content.js"]
    }
  ],

  "icons": {
    "16": "images/16.png",
    "24": "images/24.png",
    "32": "images/32.png",
    "128": "images/128.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "*://*/*"
  ]
}